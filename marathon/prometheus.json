{
    "id": "prometheus",
    "type": "DOCKER",
    "cpus": 1,
    "mem": 512,
    "disk": 0,
    "instances": 4,
    "container": {
      "docker": {
          "image": "prom/prometheus",
          "network": "BRIDGE",
          "portMappings": [
              { "containerPort": 9090, "hostPort": 0, "protocol": "tcp" }
          ],
          "forcePullImage": true
        }
    },
    "healthChecks": [
    {
      "protocol": "HTTP",
      "portIndex": 0,
      "path": "/-/",
      "gracePeriodSeconds": 5,
      "intervalSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ]
}
